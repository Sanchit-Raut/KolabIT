          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/badges/leaderboard?category=SKILL&limit=50",
          "host": ["{{baseUrl}}"],
          "path": ["badges", "leaderboard"],
          "query": [
            {
              "key": "category",
