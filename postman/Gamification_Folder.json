  "item": [
    {
      "name": "Get All Badges",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/badges",
          "host": ["{{baseUrl}}"],
          "path": ["badges"]
        }
      },
      "response": []
    },
    {
      "name": "Get Badge by ID",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/badges/{{badgeId}}",
          "host": ["{{baseUrl}}"],
          "path": ["badges", "{{badgeId}}"]
        }
      },
      "response": []
    },
