          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/posts/{{postId}}/comments",
          "host": ["{{baseUrl}}"],
          "path": ["posts", "{{postId}}", "comments"]
        }
      },
      "response": []
    },
