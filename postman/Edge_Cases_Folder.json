    {
      "name": "SQL Injection Attempt",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/users/search?skills='; DROP TABLE users; --",
          "host": ["{{baseUrl}}"],
          "path": ["users", "search"],
          "query": [
            {
              "key": "skills",
              "value": "'; DROP TABLE users; --"
            }
          ]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('SQL injection blocked', function () {",
              "    pm.response.to.have.status(400);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "XSS Attempt in Post Content",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"XSS Test\",\n  \"content\": \"<script>alert('XSS')</script>Hello World\",\n  \"type\": \"DISCUSSION\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/posts",
          "host": ["{{baseUrl}}"],
          "path": ["posts"]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('XSS attempt handled', function () {",
              "    pm.response.to.have.status(201);",
              "    const response = pm.response.json();",
              "    pm.expect(response.data.content).to.not.include('<script>');",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Rate Limiting Test",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"test@kolabit.com\",\n  \"password\": \"wrongpassword\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "login"]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Rate limiting working', function () {",
              "    if (pm.response.code === 429) {",
              "        pm.expect(pm.response.code).to.equal(429);",
              "    } else {",
              "        pm.expect(pm.response.code).to.equal(401);",
              "    }",
              "});"
            ]
          }
        }
      ]
    },
